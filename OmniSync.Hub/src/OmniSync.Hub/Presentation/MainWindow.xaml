<Window x:Class="OmniSync.Hub.Presentation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="OmniSync Hub Control" Height="650" Width="1000"
        Background="#1E1E1E" Foreground="#D4D4D4">
    <Window.Resources>
        <Style TargetType="TabControl">
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="BorderBrush" Value="#333337"/>
        </Style>
        <Style TargetType="TabItem">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="#D4D4D4"/>
            <Setter Property="Padding" Value="10,5"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#1E1E1E"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="Border">
            <Setter Property="BorderBrush" Value="#333337"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#D4D4D4"/>
        </Style>
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="#D4D4D4"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="#D4D4D4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontFamily" Value="Consolas"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#3E3E42"/>
            <Setter Property="Foreground" Value="#D4D4D4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4E4E52"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid Margin="15">
        <TabControl>
            <TabItem Header="Dashboard">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Connections List -->
                    <Border Grid.Row="0" Grid.Column="0" Margin="0,0,10,0">
                        <DockPanel>
                            <TextBlock Text="Active Connections" FontWeight="Bold" Margin="10" DockPanel.Dock="Top"/>
                            <ListBox x:Name="ConnectionsListBox" ItemsSource="{Binding ActiveConnections}" />
                        </DockPanel>
                    </Border>

                    <!-- Log Output -->
                    <Border Grid.Row="0" Grid.Column="1" Margin="0,0,0,0">
                        <DockPanel>
                            <TextBlock Text="Log Output" FontWeight="Bold" Margin="10" DockPanel.Dock="Top"/>
                            <TextBox x:Name="LogTextBox" IsReadOnly="True" VerticalScrollBarVisibility="Auto" 
                                     TextWrapping="Wrap" Margin="5" />
                        </DockPanel>
                    </Border>

                    <!-- Status and Controls Footer -->
                    <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,10,0,0" Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Last Incoming Command" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBlock x:Name="LastCommandTextBlock" Text="{Binding LastIncomingCommand}" 
                                           FontStyle="Italic" Opacity="0.8"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button x:Name="ShutdownButton" Content="Shutdown: None" Click="ShutdownButton_Click" MinWidth="150"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
            <TabItem Header="Settings">
                <StackPanel Margin="20">
                    <TextBlock Text="General Settings" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                    <CheckBox x:Name="RunOnStartupCheckBox" Content="Run OmniSync Hub on Windows Startup" 
                              Foreground="#D4D4D4" FontSize="14" Margin="0,5,0,0"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
